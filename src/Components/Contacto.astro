---
import 'bootstrap/dist/css/bootstrap.min.css';
import '../styles/global.css';

const contactInfo = {
  whatsapp: [
    { number: "+54 9 3764 67-4458", link: "https://wa.me/5493764674458" },
  ],
  email: "tekohatech@gmail.com",
  businessHours: "Lunes a Viernes: 9:00 - 18:00"
};
---

<section id="contacto" class="contact-section py-5">
  <div class="container mt-0 pt-3">
    <h2 class="text-center gradient-text mb-5 section-title">Contacto</h2>
    <p class="text-center text-light-contrast mb-5">Estamos aquí para ayudarte. Puedes comunicarte con nosotros a través de los siguientes medios:</p>

    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="row">
          <div class="col-md-6 mb-4">
            <div class="contact-option-card">
              <div class="d-flex align-items-center">
                <div class="contact-icon-container me-3">
                  <i class="fas fa-envelope fa-3x" style="color: #4fc3f7;"></i>
                </div>
                <div class="flex-grow-1">
                  <h3 class="text-light mb-2" style="font-family: 'Inter', sans-serif; font-weight: 700;">Email</h3>
                  <p class="text-light-contrast mb-0">{contactInfo.email}</p>
                </div>
              </div>
              <div class="contact-button-container mt-3 d-flex justify-content-center">
                <a href={`mailto:${contactInfo.email}`} class="contact-btn email-btn text-decoration-none">
                  <i class="fas fa-envelope me-2"></i>Enviar Email
                </a>
              </div>
            </div>
          </div>

          <div class="col-md-6 mb-4">
            <div class="contact-option-card">
              <div class="d-flex align-items-center">
                <div class="contact-icon-container me-3">
                  <i class="fas fa-clock fa-3x" style="color: #00e676;"></i>
                </div>
                <div class="flex-grow-1">
                  <h3 class="text-light mb-2" style="font-family: 'Inter', sans-serif; font-weight: 700;">Horario de Atención</h3>
                  <p class="text-light-contrast mb-0">{contactInfo.businessHours}</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Formulario de contacto -->
          <div class="col-12">
            <div class="contact-form-card">
              <h3 class="text-light mb-4" style="font-family: 'Inter', sans-serif; font-weight: 700;">Envíanos un mensaje</h3>

              <!-- Formulario de contacto estándar de Netlify -->
              <form name="contact" method="POST" data-netlify="true" netlify-honeypot="bot-field">
                <input type="hidden" name="form-name" value="contact" />
                <div class="d-none">
                  <label>Don’t fill this out if you’re human: <input name="bot-field"></label>
                </div>

                <div class="form-group mb-3">
                  <label for="name" class="form-label text-light">Nombre <span class="text-danger">*</span></label>
                  <input
                    type="text"
                    id="name"
                    name="name"
                    required
                    class="form-control bg-dark bg-opacity-20 border border-secondary border-opacity-20 rounded-lg text-light p-3 w-100"
                    placeholder="Tu nombre o empresa"
                  />
                </div>

                <div class="form-group mb-3">
                  <label for="email" class="form-label text-light">Email <span class="text-danger">*</span></label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    class="form-control bg-dark bg-opacity-20 border border-secondary border-opacity-20 rounded-lg text-light p-3 w-100"
                    placeholder="hola@ejemplo.com"
                  />
                </div>

                <div class="form-group mb-4">
                  <label for="message" class="form-label text-light">Mensaje <span class="text-danger">*</span></label>
                  <textarea
                    id="message"
                    name="message"
                    required
                    rows="4"
                    class="form-control bg-dark bg-opacity-20 border border-secondary border-opacity-20 rounded-lg text-light p-3 w-100"
                    placeholder="¿En qué puedo ayudarte?"
                  ></textarea>
                </div>

                <div class="d-grid">
                  <button
                    type="submit"
                    class="btn btn-primary w-100 py-3 rounded-3"
                  >
                    Enviar Mensaje
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .gradient-text {
    background: linear-gradient(45deg, #4fc3f7, #2196f3, #00e676);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    font-family: 'Inter', sans-serif;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
  }

  .contact-section {
    background: linear-gradient(45deg, #0a0908, #1a237e);
    position: relative;
    padding-top: 5rem;
    padding-bottom: 5rem;
  }

  .contact-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, #4fc3f7, transparent);
    filter: blur(1px);
  }

  .contact-option-card, .contact-form-card {
    background-color: rgba(255, 255, 255, 0.08);
    border-radius: 16px;
    padding: 30px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    position: relative;
    overflow: hidden;
  }

  .contact-option-card:hover, .contact-form-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 20px 30px rgba(0, 0, 0, 0.2);
    background-color: rgba(255, 255, 255, 0.12);
  }

  .contact-icon-container {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 60px;
    height: 60px;
    border-radius: 50%;
    background-color: rgba(79, 195, 247, 0.1);
  }
  
  .form-control {
    color: #ffffff;
    border: 1px solid rgba(255, 255, 255, 0.2);
    background-color: rgba(26, 35, 126, 0.3) !important;
  }

  .form-control::placeholder {
    color: rgba(255, 255, 255, 0.5);
  }

  .form-control:focus {
    color: #ffffff;
    background-color: rgba(26, 35, 126, 0.4) !important;
    border-color: #4fc3f7;
    box-shadow: 0 0 0 0.25rem rgba(79, 195, 247, 0.25);
  }

  .btn-primary {
    background-color: #00e676;
    border-color: #00e676;
    color: #1a237e;
    font-weight: 700;
    padding: 12px 30px;
    border-radius: 50px;
    transition: all 0.3s ease;
  }

  .btn-primary:hover {
    background-color: #00c853;
    border-color: #00c853;
    transform: translateY(-3px);
    box-shadow: 0 10px 20px rgba(0, 230, 118, 0.3);
  }
</style>
