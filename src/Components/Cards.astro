---
import '../styles/global.css';

// An array to hold all the portfolio card data for easier management.
const cards = [
  {
    title: 'Paliachi',
    image: '/Paliachi.webp',
    link: 'https://paliachi.com/',
    buttonText: 'Ver más'
  },
  {
    title: 'Giorno Pizzas',
    image: '/giorno.webp',
    link: 'https://giornopizzas.free.nf/',
    buttonText: 'Ver más'
  },
  {
    title: 'Betelgeuse',
    image: '/betell.png',
    link: 'https://betelgeusee.netlify.app/',
    buttonText: 'Ver más'
  },
  {
    title: 'Invitaciones Digitales',
    image: '/invi-teko.jpg', // The new image provided by the user
    link: 'https://invi-cumple2.netlify.app/',
    buttonText: 'Ver ejemplo'
  }
];
---

<section class="portfolio-section">
  <h2 class="gradient-text text-center section-title mb-4">Nuestro Portafolio</h2>
  <div class="container">
    <div class="row d-flex justify-content-center">
      {cards.map(card => (
        <div class="col-12 col-md-6 col-lg-4 mb-4 d-flex justify-content-center">
          <div class="card" role="article" aria-label={`Tarjeta del proyecto ${card.title}`}>
            <img
              src={card.image}
              alt={`Imagen del proyecto ${card.title}`}
              loading="lazy"
              width="300"
              height="200"
              class="card-img-top"
              decoding="async"
            />
            <h3 class="text-light" style="font-family: 'Inter', sans-serif;">{card.title}</h3>
            <a
              href={card.link}
              target="_blank"
              rel="noopener noreferrer"
              class="card-button-link text-light"
              style="font-family: 'Inter', sans-serif;"
              aria-label={`Visitar el sitio web de ${card.title}`}
            >
              <button
                class="text-light"
                style="font-family: 'Inter', sans-serif;"
                aria-describedby={`description-${card.title.replace(/\s+/g, '-').toLowerCase()}`}
              >
                {card.buttonText}
              </button>
            </a>
            <div id={`description-${card.title.replace(/\s+/g, '-').toLowerCase()}`} class="visually-hidden">
              Enlace externo al sitio web de {card.title}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
.gradient-text {
    background: linear-gradient(45deg, #4fc3f7, #2196f3, #00e676);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    font-family: 'Inter', sans-serif;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
}

.portfolio-section {
    padding: 32px 16px;
    background: linear-gradient(135deg, #1a237e, #0a0908);
    position: relative;
}

.portfolio-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, #4fc3f7, transparent);
    filter: blur(1px);
}

.card {
    width: 100%;
    height: 100%;
    border-radius: 16px;
    padding: 16px;
    display: flex;
    flex-direction: column;
    align-items: center;
    background: rgba(255, 255, 255, 0.08);
    transition: transform 0.2s;
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
    border: 1px solid rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    position: relative;
    overflow: hidden;
}

.card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background: linear-gradient(90deg, #4fc3f7, #00e676);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.3s ease;
}

.card:hover {
    transform: scale(1.05);
    background: rgba(255, 255, 255, 0.12);
}

.card:hover::before {
    transform: scaleX(1);
}

.card img {
    width: 100%;
    height: auto;
    max-height: 200px;
    object-fit: cover;
    border-radius: 8px; /* Rounded corners for the image */
}

.card h3 {
    margin: 16px 0 8px; /* Adjusted margin */
    text-align: center;
}

.card-button-link {
    display: flex;
    justify-content: center;
    width: 100%;
    text-decoration: none; /* Remove underline from link */
}

.card button {
    margin-top: 8px;
    background-color: #4fc3f7;
    color: #1a237e;
    border: none;
    padding: 8px 16px;
    border-radius: 50px;
    transition: all 0.3s ease;
    cursor: pointer;
    font-weight: 600;
    font-family: 'Inter', sans-serif;
}

.card button:hover {
    background-color: #2196f3;
    transform: translateY(-3px);
    box-shadow: 0 10px 20px rgba(79, 195, 247, 0.3);
}
</style>
