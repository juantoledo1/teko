---
import 'bootstrap/dist/css/bootstrap.min.css';
import '../styles/global.css';

const contactInfo = {
  whatsapp: [
    { number: "+54 9 3764 67-4458", link: "https://wa.me/5493764674458" },
    // { number: "+54 9 223 301-7842", link: "https://wa.me/5493769876543" }
  ],
  email: "tekohatech@gmail.com",
  businessHours: "Lunes a Viernes: 9:00 - 18:00"
};
---

<section id="contacto" class="contact-section py-5">
  <div class="container mt-0 pt-3">
    <h2 class="text-center gradient-text mb-5 section-title">Contacto</h2>
    <p class="text-center text-monospace-light-contrast mb-5">Estamos aquí para ayudarte. Puedes comunicarte con nosotros a través de los siguientes medios:</p>

    <div class="row justify-content-center mb-5">
      <div class="col-md-8">
        <div class="contact-options-container">
          <div class="contact-option-card mb-4">
            <div class="d-flex align-items-center">
              <div class="contact-icon-container me-3">
                <i class="fab fa-whatsapp fa-3x" style="color: #25D366;"></i>
              </div>
              <div class="flex-grow-1">
                <h3 class="text-monospace-light-contrast mb-2" style="font-family: 'SFMono-Regular', 'Consolas', 'Liberation Mono', 'Menlo', monospace, sans-serif; color: #ffffff; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7); font-weight: bold;">WhatsApp</h3>
                <p class="text-monospace-light-contrast mb-0">{contactInfo.whatsapp[0]?.number}</p>
              </div>
            </div>
            <div class="contact-button-container mt-3 d-flex justify-content-center">
              <a href={contactInfo.whatsapp[0]?.link} target="_blank" class="contact-btn whatsapp-btn text-decoration-none">
                <i class="fab fa-whatsapp me-2"></i>Enviar Mensaje
              </a>
            </div>
          </div>

          <div class="contact-option-card mb-4">
            <div class="d-flex align-items-center">
              <div class="contact-icon-container me-3">
                <i class="fas fa-envelope fa-3x" style="color: #6495ED;"></i>
              </div>
              <div class="flex-grow-1">
                <h3 class="text-monospace-light-contrast mb-2" style="font-family: 'SFMono-Regular', 'Consolas', 'Liberation Mono', 'Menlo', monospace, sans-serif; color: #ffffff; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7); font-weight: bold;">Email</h3>
                <p class="text-monospace-light-contrast mb-0">{contactInfo.email}</p>
              </div>
            </div>
            <div class="contact-button-container mt-3 d-flex justify-content-center">
              <a href={`mailto:${contactInfo.email}`} class="contact-btn email-btn text-decoration-none">
                <i class="fas fa-envelope me-2"></i>Enviar Email
              </a>
            </div>
          </div>

          <div class="contact-option-card">
            <div class="d-flex align-items-center">
              <div class="contact-icon-container me-3">
                <i class="fas fa-clock fa-3x" style="color: #FFD700;"></i>
              </div>
              <div class="flex-grow-1">
                <h3 class="text-monospace-light-contrast mb-2" style="font-family: 'SFMono-Regular', 'Consolas', 'Liberation Mono', 'Menlo', monospace, sans-serif; color: #ffffff; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7); font-weight: bold;">Horario de Atención</h3>
                <p class="text-monospace-light-contrast mb-0">{contactInfo.businessHours}</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .gradient-text {
    background: linear-gradient(45deg, #EE82EE, #6495ED, #00FA9A); /* New color palette */
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    font-family: 'SFMono-Regular', 'Consolas', 'Liberation Mono', 'Menlo', monospace, sans-serif;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
  }

  .section-title {
    font-family: 'SFMono-Regular', 'Consolas', 'Liberation Mono', 'Menlo', monospace, sans-serif;
    color: #ffffff;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
    font-weight: bold;
    text-align: center;
  }

  .contact-section {
    background: linear-gradient(45deg, #2a1dde, #0a0908); /* Usando colores de la paleta */
    position: relative;
  }

  /* Efecto de transición suave entre secciones */
  .contact-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, #6495ED, transparent);
    filter: blur(1px);
  }

  .container.mt-0.pt-3 {
    margin-top: 2rem; /* Reducido espacio superior */
    padding-top: 1rem; /* Reducido padding superior */
  }

  .text-light a {
    color: #ffffff;
    text-decoration: none;
  }

  .text-light a:hover {
    color: #cccccc;
  }

  .fab, .fas {
    vertical-align: middle;
  }
  
  .contact-options-container {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }
  
  .contact-option-card {
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    padding: 1.5rem;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    backdrop-filter: blur(10px);
  }
  
  .contact-option-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
    background-color: rgba(255, 255, 255, 0.15);
  }
  
  .contact-icon-container {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 60px;
    height: 60px;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.1);
  }
  
  .contact-button-container {
    margin-top: 1rem;
  }
  
  .contact-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.75rem 1.5rem;
    border-radius: 50px;
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: all 0.3s ease;
    min-width: 200px;
  }
  
  .whatsapp-btn {
    background-color: #25D366;
    color: white;
  }
  
  .whatsapp-btn:hover {
    background-color: #128C7E;
    transform: scale(1.05);
    color: white;
  }
  
  .email-btn {
    background-color: #6495ED;
    color: white;
  }
  
  .email-btn:hover {
    background-color: #4A7BBC;
    transform: scale(1.05);
    color: white;
  }
  
  /* Ajustes responsivos para la sección de contacto */
  @media (max-width: 768px) {
    .contact-option-card {
      padding: 1rem;
    }
    
    .contact-icon-container {
      width: 50px;
      height: 50px;
    }
    
    .contact-btn {
      min-width: 180px;
      padding: 0.6rem 1.2rem;
      font-size: 0.9rem;
    }
  }
  
  @media (max-width: 576px) {
    .contact-options-container {
      gap: 1rem;
    }
    
    .contact-option-card {
      padding: 0.8rem;
    }
    
    .contact-icon-container {
      width: 45px;
      height: 45px;
    }
    
    .contact-btn {
      min-width: 160px;
      padding: 0.5rem 1rem;
      font-size: 0.85rem;
    }
    
    .d-flex {
      flex-direction: column;
      text-align: center;
    }
    
    .contact-icon-container {
      margin-bottom: 0.5rem;
    }
    
    .contact-button-container {
      width: 100%;
    }
  }
</style>

<!-- FontAwesome for icons -->
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>