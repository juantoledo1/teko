---
import 'bootstrap/dist/css/bootstrap.min.css';
import '../styles/global.css';


const props = {
  juan: {
    name: "Juan Manuel Toledo",
    description: "Soy Juan Manuel Toledo, CEO de Tekohatech y desarrollador web full stack, técnico en ciberseguridad y además técnico superior en marketing y publicidad. Con base en Posadas, Misiones, Argentina, mi pasión por la tecnología y el desarrollo web me ha llevado a dominar una amplia gama de herramientas y lenguajes. Utilizo estos conocimientos para crear soluciones innovadoras y eficientes para PYMEs y empresas.",
    image: "../../Juan1.webp"
  },
  mauro: {
    name: "Mauro Flores",
    description: "Soy Mauro Flores, cofundador de Tekohatech y desarrollador web full stack y viajero con base en Florianópolis,Brasil. Soy un entusiasta de la tecnología, apasionado por el diseño, y siempre dispuesto a participar en una minga, una colaboración colectiva según las tradiciones de los pueblos originarios.",
    image: "../../foto_mau.webp"
  }
};
---



<section id="nosotros" class="container-fluid py-5 gradient-background">
  <div class="container mt-0 pt-3"> <!-- Reducido el espacio superior -->
    <h2 class="gradient-text text-center mb-4 section-title">Nosotros</h2>
    <div class="row text-center justify-content-center">
      <div class="col-lg-8">
        <div class="image-container rounded-circle mx-auto">
          <img src={props.juan.image} alt="Juan Manuel Toledo" class="img-fluid grayscale rounded-circle" />
        </div>
        <h3 class="mt-3 text-monospace-light-contrast" style="font-family: 'SFMono-Regular', 'Consolas', 'Liberation Mono', 'Menlo', monospace, sans-serif; color: #ffffff; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7); font-weight: bold;">{props.juan.name}</h3> <!-- Nombre sin degradado para diferenciar de títulos de sección -->
        <p class="h5 text-monospace-light-contrast">{props.juan.description}</p>
      </div>
      <!-- <div class="col-md-6">
        <div class="image-container rounded-circle mx-auto">
          <img src={props.mauro.image} alt="Mauro Flores" class="img-fluid grayscale rounded-circle">
        </div>
        <h3 class="gradient-text mt-3">{props.mauro.name}</h3>
        <p class="h5">{props.mauro.description}</p>
      </div> -->
    </div>
  </div>
</section>



<style>
  .gradient-background {
    background: linear-gradient(45deg, #2a1dde, #0a0908);
    position: relative;
  }

  /* Efecto de transición suave entre secciones */
  .gradient-background::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, #6495ED, transparent);
    filter: blur(1px);
  }

  .gradient-text {
    background: linear-gradient(45deg, #EE82EE, #6495ED, #00FA9A); /* New color palette */
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    font-family: 'SFMono-Regular', 'Consolas', 'Liberation Mono', 'Menlo', monospace, sans-serif;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
  }

  .image-container {
    position: relative;
    width: 200px;
    height: 200px;
    margin: 1rem auto 1.5rem; /* Ajustado el espacio alrededor */
    overflow: hidden;
  }

  .image-container img {
    transition: filter 0.3s ease;
  }

  .rounded-circle {
    border-radius: 50%;
  }

  .grayscale {
    filter: grayscale(100%);
  }

  .image-container:hover img {
    filter: grayscale(0%);
  }

  .container.mt-0.pt-3 {
    margin-top: 2rem; /* Reducido espacio superior */
    padding-top: 1rem; /* Reducido padding superior */
  }
</style>